{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "target": "es6",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "es2018.promise",
      "es2018.RegExp"
    ]
  },
  "include": [ "js/**/*", "types/**/*" ],
  "exclude": [ "typings", "node_modules", "**/*.spec.ts" ]
}
